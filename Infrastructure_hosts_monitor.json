{
	"name": "Number of hosts spiked up",
	"type": "metric alert",
	"query": "avg(last_2h):avg:datadog.estimated_usage.hosts{*} > 550",
	"message": "{{#is_alert}} Number of hosts spiked up!!\n{{/is_alert}}\n\nNotify: @fernando.delolmo@datadoghq.com",
	"tags": [],
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"silenced": {},
		"include_tags": true,
		"no_data_timeframe": null,
		"require_full_window": true,
		"new_host_delay": 300,
		"notify_no_data": false,
		"renotify_interval": 0,
		"escalation_message": "",
		"thresholds": {
			"critical": 550,
			"warning": 520
		}
	}
}